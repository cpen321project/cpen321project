<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center_horizontal"
    android:orientation="vertical"
    tools:context=".BrowseCourse"
    android:id="@+id/linearLayout">

    <TextView
        android:id="@+id/browse_course_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Browse Course"
        android:textColor="@color/ubc_darkblue"
        android:textSize="24sp"
        tools:layout_conversion_absoluteHeight="32dp"
        tools:layout_conversion_absoluteWidth="162dp"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="270dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/autocompletecourse"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:hint="@string/find_course_here"
            tools:layout_conversion_absoluteHeight="50dp"
            tools:layout_conversion_absoluteWidth="262dp"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="383dp"
            tools:textColorHint="@color/dark_grey" />

        <ImageView
            android:id="@+id/dropdown_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24" />

    </LinearLayout>

    <Button
        android:id="@+id/addcourse_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/ubc_darkblue"
        android:text="Add Course"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="129dp"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="463dp" />

</LinearLayout>